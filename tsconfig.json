{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "@fake-db/*": ["./src/@fake-db/*"],
      "views/*": ["./src/views/*"],
      "@core/*": ["./src/@core/*"],
      "@store/*": ["./src/@redux/store/*"],
      "@redux/*": ["./src/@redux/*"],
      "@iconify": ["./src/@fake-db/iconify-icons"],
      "@hooks": ["./src/hooks"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/api/auth/ts",
    "src/types" 
  ],
  "exclude": ["node_modules"]
}
